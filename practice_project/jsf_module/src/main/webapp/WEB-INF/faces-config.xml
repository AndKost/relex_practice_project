<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{interviewBean.go}</from-action>
            <from-outcome>index_interview</from-outcome>
            <to-view-id>/Interview/Index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{user.doAction}</from-action>
            <from-outcome>HELLOADMIN</from-outcome>
            <to-view-id>/faces/resources/admin/HelloAdmin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/Interview/Index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{interviewBean.add}</from-action>
            <from-outcome>add_interview</from-outcome>
            <to-view-id>/Interview/Add.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{interviewBean.editInterview}</from-action>
            <from-outcome>edit_interview</from-outcome>
            <to-view-id>/Interview/Edit.xhtml</to-view-id>
            <redirect include-view-params="true">
                <redirect-param>
                    <name>id</name>
                    <value>#{interviewBean.viewId}</value>
                </redirect-param>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{interviewBean.detailsInterview}</from-action>
            <from-outcome>details_interview</from-outcome>
            <to-view-id>/Interview/Details.xhtml</to-view-id>
            <redirect include-view-params="true">
                <redirect-param>
                    <name>id</name>
                    <value>25</value>
                </redirect-param>
            </redirect>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/Interview/Add.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{interviewBean.go}</from-action>
            <from-outcome>index_interview</from-outcome>
            <to-view-id>/Interview/Index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/Interview/Details.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{interviewBean.go}</from-action>
            <from-outcome>index_interview</from-outcome>
            <to-view-id>/Interview/Index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/Interview/Edit.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{interviewBean.go}</from-action>
            <from-outcome>index_interview</from-outcome>
            <to-view-id>/Interview/Index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>