<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
    <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>VIEWDATACITIZEN</from-outcome>
            <to-view-id>/faces/resources/user/personalAreaCitizen.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>VIEWDATAADMIN</from-outcome>
            <to-view-id>/faces/resources/admin/personalAreaAdmin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    <from-view-id>/faces/resources/*</from-view-id>
        <navigation-case>
            <from-outcome>LOGOUT</from-outcome>
            <to-view-id>/faces/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    <from-view-id>/faces/resources/user/personalAreaCitizen.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>VIEWDATA_HOME</from-outcome>
            <to-view-id>/faces/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    <from-view-id>/faces/faces/resources/visitor/registrationCitizen.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>CANCEL</from-outcome>
            <to-view-id>/faces/index.xhtml?faces-redirect=true</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>REGISTCITIZEN</from-outcome>
            <to-view-id>/faces/resources/visitor/registrationCitizen.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>LOGIN</from-outcome>
            <to-view-id>/faces/resources/visitor/login.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    <from-view-id>/faces/resources/visitor/registrationCitizen.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>REGISTADMIN</from-outcome>
            <to-view-id>/faces/resources/visitor/registrationAdmin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
</faces-config>