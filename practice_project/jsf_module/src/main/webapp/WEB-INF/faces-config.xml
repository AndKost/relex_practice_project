<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
    <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{user.doAction}</from-action>
            <from-outcome>HELLOADMIN</from-outcome>
            <to-view-id>/faces/resources/user/personalAreaCitizen.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    <from-view-id>/faces/faces/resources/visitor/registrationCitizen.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{user.registrationCitizen}</from-action>
            <from-outcome>HOME</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    <from-view-id>/faces/faces/resources/visitor/registrationCitizen.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{user.cancel}</from-action>
            <from-outcome>CANCEL</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{user.newCitizen}</from-action>
            <from-outcome>REGISTCITIZEN</from-outcome>
            <to-view-id>/faces/resources/visitor/registrationAdmin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    <from-view-id>/faces/resources/visitor/registrationAdmin.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{user.toLogin}</from-action>
            <from-outcome>LOGIN</from-outcome>
            <to-view-id>/faces/resources/visitor/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{user.toLogin}</from-action>
            <from-outcome>LOGIN</from-outcome>
            <to-view-id>/faces/resources/visitor/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    <from-view-id>/faces/resources/visitor/registrationCitizen.xhtml</from-view-id>
        <navigation-case>
        	<from-action>#{user.newAdmin}</from-action>
            <from-outcome>REGISTADMIN</from-outcome>
            <to-view-id>/faces/resources/visitor/registrationAdmin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
</faces-config>